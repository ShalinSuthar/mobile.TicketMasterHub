<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fav_search_result_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/rounded_corner_background"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/fav_event_image"
        android:layout_width="91dp"
        android:layout_height="85dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="8dp">

        <TextView
            android:id="@+id/fav_event_name"
            android:layout_width="200dp"
            android:layout_height="33dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#DAD6D6"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fav_event_location"
            android:layout_width="197dp"
            android:layout_height="32dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#D5CFCF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fav_event_category"
            android:layout_width="197dp"
            android:layout_height="33dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#CAC4C4"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="8dp">

        <TextView
            android:id="@+id/fav_event_date"
            android:layout_width="75dp"
            android:layout_height="32dp"
            android:textColor="#C5BDBD"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fav_event_time"
            android:layout_width="77dp"
            android:layout_height="32dp"
            android:textColor="#CCC4C4"
            android:textSize="14sp" />

        <ToggleButton
            android:id="@+id/fav_favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@null"
            android:button="@drawable/heart_outline"
            android:textOff=""
            android:textOn=""/>


    </LinearLayout>

</LinearLayout>
